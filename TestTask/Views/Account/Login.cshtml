@model LoginModel
@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TestTask - Login</title>
    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="~/lib/style.css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>


</head>

<body>

    <div class="container">

        <form class="form-signin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <h2 class="form-signin-heading">Please sign in</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Login" class="sr-only">Login</label>
            <div><span asp-validation-for="Login" class="text-danger"></span></div>
            <input class="form-control" placeholder="Login" asp-for="Login">
            <label asp-for="Password" class="sr-only">Password</label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input class="form-control" placeholder="Password" asp-for="Password">
            <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:20px">Sign in</button>
        </form>

    </div> <!-- /container -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
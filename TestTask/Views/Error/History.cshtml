<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Action</th>
            <th>Comment</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.History)
            {
            <tr>
                <th>@p.Date.Date.ToShortDateString()</th>
                <td>@p.historyAct</td>
                <td>@p.Comment</td>
                <td>@(p.user.Name + " " + p.user.SName[0]+".")</td>
            </tr>
        }
    </tbody>
</table>